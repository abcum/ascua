<example>

	{{#let (get-code-snippet @name unindent=true) as |snippet|}}

		<output ...attributes>
			{{~#if (and (not @hide) (eq "handlebars" snippet.language) )~}}
				{{~yield~}}
			{{~/if~}}
		</output>

		<CodeBlock @code={{snippet.source}} @language={{snippet.language}} />

	{{/let}}

</example>