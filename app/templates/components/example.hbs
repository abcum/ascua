<example>

	{{#let (get-code-snippet @name unindent=true) as |snippet|}}

		<output>
			{{~#if (and (not @hide) (eq "handlebars" snippet.language) )~}}
				{{~yield~}}
			{{~/if~}}
		</output>

		<CodeBlock @language={{snippet.language}}>
			{{~snippet.source~}}
		</CodeBlock>

	{{/let}}

</example>