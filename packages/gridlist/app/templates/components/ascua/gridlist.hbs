<app-gridlist {{did-insert this.didCreate}} {{did-resize this.didResize}} {{did-update this.didChange @model @model.length}} {{did-update this.didSelect @selection}} ...attributes>
	<app-gridlist-view {{on "scroll" this.didScroll}} {{on "click" this.didClick}}>
		<app-gridlist-area {{style height=this.conf.h}}>
			{{~#each this.items as |item|~}}
				{{#let (includes item.id this.conf.a) as |selected|}}
					<Ascua::Gridlist::Item
						@item={{item}}
						@conf={{this.conf}}
						@total={{this.total}}
						@selected={{selected}}
						@onClick={{this.didClick}}
						@onDblClick={{this.dblClick}}
						@onCtxClick={{this.ctxClick}}
						...attributes
					>
						{{~yield item.model selected~}}
					</Ascua::Gridlist::Item>
				{{/let}}
			{{~/each~}}
		</app-gridlist-area>
	</app-gridlist-view>
</app-gridlist>