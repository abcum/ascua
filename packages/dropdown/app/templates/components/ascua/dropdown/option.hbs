<app-dropdown-option
	disabled={{@disabled}}
	selected={{includes @value @dropdown.value}}
	{{on "click" (fn @dropdown.changed @value)}}
	{{did-insert (fn @dropdown.register @value @label)}}
	{{will-destroy (fn @dropdown.unregister @value @label)}}
	...attributes>
	{{#if hasBlock}}
		{{~yield~}}
	{{else}}
		{{@label}}
	{{/if}}
</app-dropdown-option>