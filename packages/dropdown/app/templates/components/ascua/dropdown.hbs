{{on-press "escape" this.close}}

<app-dropdown {{did-insert this.didCreate}} ...attributes>

	<label {{on "click" this.open}}>
		{{if this.label (safe this.label) @default}}
		<svg xmlns="http://www.w3.org/2000/svg" width="300px" height="250px" viewBox="0 0 300 250">
			<polygon transform="translate(150.500000, 125.500000) scale(1, -1) translate(-150.500000, -125.500000)" points="150.5 84 259 167 42 167"></polygon>
		</svg>
	</label>

	<app-dropdown-cover display={{this.display}} visible={{this.visible}} role="button" {{on "click" this.close}} />

	<app-dropdown-front display={{this.display}} visible={{this.visible}} {{style marginTop=this.top marginLeft=this.left}}>

		{{yield (hash
			group=(component "ascua/dropdown/group")
			option=(component "ascua/dropdown/option"
				dropdown=this
			)
		)}}

	</app-dropdown-front>

</app-dropdown>