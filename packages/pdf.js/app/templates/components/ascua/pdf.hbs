<app-pdf {{did-insert this.didCreate}} {{did-update this.didChange @url @time}} {{will-destroy this.willDelete}}>

	<Ascua::pdf::viewer @doc={{this.doc}} @page={{this.num}} />

	<app-pdf-thumbs>
		{{#each (pdf-pages this.doc.numPages) as |page|}}
			<Ascua::pdf::thumb @doc={{this.doc}} @page={{page}} {{on "click" (fn this.select page)}} />
		{{/each}}
	</app-pdf-thumbs>

</app-pdf>