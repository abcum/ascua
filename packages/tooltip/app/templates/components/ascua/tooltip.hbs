<span {{did-insert this.didCreate}} {{will-destroy this.willDelete}}></span>

{{#if this.enabled}}

	{{on-press "escape" this.close}}

	{{#in-element this.document.body insertBefore=null}}
		<app-tooltip {{did-insert this.style}} side={{this.side}} visible={{this.visible}} ...attributes>
			<arrow></arrow>
			{{~yield~}}
		</app-tooltip>
	{{/in-element}}

{{/if}}