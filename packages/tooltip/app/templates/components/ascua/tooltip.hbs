<span {{did-insert this.didInsert}} {{will-destroy this.willDestroy}}></span>

{{#if this.enabled}}

	{{on-press "escape" this.close}}

	{{#-in-element this.document.body}}
		<app-tooltip id={{this.uniq}} side={{this.side}} visible={{this.visible}} ...attributes>
			<arrow></arrow>
			{{~yield~}}
		</app-tooltip>
	{{/-in-element}}

{{/if}}